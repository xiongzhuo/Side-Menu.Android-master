<?xml version="1.0" encoding="utf-8"?>
<activity.xz.com.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_side_menu"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:text="分类侧滑菜单"
        android:textSize="20px" />

    <Button
        android:id="@+id/btn_titanic"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:text="可以显示水位上升下降的TextView"
        android:textSize="20px" />

    <Button
        android:id="@+id/btn_context_menu"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:text="可以方便快速集成漂亮带有动画效果的上下文菜单"
        android:textSize="20px" />

    <Button
        android:id="@+id/btn_circlea"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:text="自定义View动画"
        android:textSize="20px" />

    <Button
        android:id="@+id/btn_text_input_layout"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:text="使用 TextInputLayout 实现优雅的登录界面及验证"
        android:textSize="20px" />

    <Button
        android:id="@+id/btn_fragment_layout"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:text="Android中Fragment和ViewPager那点事儿（仿微信APP）"
        android:textSize="20px" />

    <Button
        android:id="@+id/btn_recycler"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:text="recyclerActivity"
        android:textSize="20px" />
</activity.xz.com.autolayout.AutoLinearLayout>